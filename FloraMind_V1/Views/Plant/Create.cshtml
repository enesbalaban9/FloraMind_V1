@model FloraMind_V1.Models.Plant

@{
    ViewData["Title"] = "Yeni Katalog Bitkisi Ekle";
}

<link rel="stylesheet" href="~/css/CreatePlant.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="plant-card">
                <div class="plant-card-header">
                    <h2>🌱 Yeni Bitki Ekle</h2>
                    <p>FloraMind kataloğuna yeni bir bitki ekleyin.</p>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data" class="plant-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label">Bitki Adı (Ortak)</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Paşa Kılıcı" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Species" class="form-label">Bitki Türü (Bilimsel)</label>
                        <input asp-for="Species" class="form-control" placeholder="Örn: Sansevieria trifasciata" />
                        <span asp-validation-for="Species" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label class="form-label">Bitki Resmi</label>
                        <input type="file" name="imageFile" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-save">
                            <i class="fas fa-plus-circle"></i> Kataloğa Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-link">İptal ve Listeye Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
