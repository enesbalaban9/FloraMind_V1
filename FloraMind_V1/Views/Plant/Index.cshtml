@model IEnumerable<FloraMind_V1.Models.Plant>

@{
    ViewData["Title"] = "Bitki Kataloğu Yönetimi";
}

<h1>🌿 Bitki Kataloğu</h1>
<p>
    <a asp-area="" asp-controller="Admin" asp-action="Index" class="btn btn-primary">
        ← Admin Paneli
    </a>

    <a asp-action="Create" class="btn btn-primary">Yeni Katalog Bitkisi Ekle</a>

</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Species)</th>
            <th>Eklenme Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Species)</td>
                <td>@item.DateAdded.ToShortDateString()</td>
                <td>
                    <a asp-action="AddToMyPlants" asp-route-id="@item.PlantID" class="btn btn-sm btn-success">
                        + Ekle
                    </a> |

                    <a asp-action="Edit" asp-route-id="@item.PlantID" class="btn btn-sm btn-info">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.PlantID" class="btn btn-sm btn-secondary">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.PlantID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>