@model IEnumerable<FloraMind_V1.Models.UserPlant>

@{
    ViewData["Title"] = "Bitkilerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/UserPlants-Index.css" />
<div class="flora-container">
    <h2 class="page-title">Koleksiyonum</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <div style="text-align: center; margin-top: 50px;">
            <h3>Henüz bitki eklemediniz.</h3>
            <a asp-controller="Catalog" asp-action="ShowCatalog" class="btn btn-primary">Kataloğa Git</a>
        </div>
    }
    else
    {
        <div class="plant-grid">
            @foreach (var item in Model)
            {
                <div class="plant-card">
                    <img src="@(string.IsNullOrEmpty(item.Plant?.ImageUrl) ? "https://via.placeholder.com/150" : $"/images/{item.Plant.ImageUrl}")"
                         alt="Bitki">

                    <div class="card-body">
                        <h3>@(item.Plant?.Name ?? "İsimsiz")</h3>
                        <h4><strong>Tür:</strong>@(item.Plant?.Species ?? "Bilinmiyor")</h4>
                        @if (item.Plant?.Contents != null && item.Plant.Contents.Any())
                        {
                            <div>
                                @foreach (var content in item.Plant.Contents)
                                {
                                    <div class="content-item">
                                        <strong>Bitki İçeriği:</strong>
                                        <p>@content.Body</p>
                                    </div>

                                }
                            </div>
                        }
                        else
                        {
                            <p>
                                Henüz içerik eklenmemiş.
                            </p>
                        }
                        <form asp-controller="UserPlants" asp-action="Remove" method="post" style="margin-top:10px;" onsubmit="return confirm('Silmek istediğine emin misin?');">
                            <input type="hidden" name="userPlantId" value="@item.UserPlantID" />
                            <button type="submit" class="btn btn-danger" style="width:100%">Koleksiyondan Kaldır</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>
