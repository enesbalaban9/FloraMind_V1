@model IEnumerable<FloraMind_V1.Models.UserPlant>

@{
    ViewData["Title"] = "Benim Bahçem";
}

<div class="container mt-5">
    <h2>Benim Bahçem</h2>
    <hr />

    <div class="row">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Henüz bahçenize eklediğiniz bir bitki yok. <a asp-action="ShowCatalog">Kataloga Git</a>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow">
                        <img src="@(string.IsNullOrEmpty(item.Plant.ImageUrl) ? "/images/default-plant.jpg" : $"/images/{item.Plant.ImageUrl}")"
                             class="card-img-top" alt="@item.Plant.Name" style="height: 200px; object-fit: cover;">

                        <div class="card-body text-center">
                            <h5 class="card-title">@item.Plant.Name</h5>
                            <p class="card-text text-muted small">@item.Plant.Species</p>

                            <div class="p-2 mb-3 bg-light rounded border">
                                <p class="mb-1 small fw-bold text-uppercase">Sıradaki Sulama</p>
                                <h4 class="countdown text-primary"
                                    data-target="@item.NextWateringDate?.ToString("yyyy-MM-ddTHH:mm:ss")">
                                    --:--:--
                                </h4>
                            </div>

                            <form asp-action="WaterPlant" asp-route-id="@item.UserPlantID" method="post">
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="fas fa-tint"></i> Şimdi Suladım
                                </button>
                            </form>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="d-flex gap-2">
                                    <a asp-controller="Catalog"
                                       asp-action="Details"
                                       asp-route-id="@item.PlantID"
                                       class="btn btn-sm btn-outline-primary">
                                        Detay
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.UserPlantID" method="post" onsubmit="return confirm('Bu bitkiyi bahçenizden silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i> Sil
                                        </button>
                                    </form>
                                </div>

                                <small class="text-muted ms-1" style="font-size: 0.75rem;">
                                    Son: @item.LastWatered.ToString("dd.MM HH:mm")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/Countdown.js"></script>
}