@model FloraMind_V1.Models.Content

@{
    ViewData["Title"] = "İçerik Silme Onayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg" style="border-radius: 20px;">

                <div class="card-header bg-danger text-white py-4 text-center" style="border-radius: 20px 20px 0 0;">
                    <div class="mb-3">
                        <i class="fas fa-exclamation-circle fa-4x animate__animated animate__pulse animate__infinite"></i>
                    </div>
                    <h3 class="mb-0">İçeriği Sil?</h3>
                    <p class="small mb-0 opacity-75">Bu işlem kalıcıdır ve geri alınamaz.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <p class="text-muted">Şu içeriği silmek üzeresiniz:</p>
                        <h4 class="text-dark fw-bold">"@Model.Title"</h4>
                        <div class="badge bg-light text-dark border mt-2 px-3 py-2">
                            <i class="fas fa-leaf text-success me-2"></i>@Model.Plant.Name
                        </div>
                    </div>

                    <div class="alert alert-warning border-0 small shadow-sm mb-4" style="border-radius: 12px;">
                        <i class="fas fa-info-circle me-2"></i>
                        Bu içeriğe bağlı tüm metinler ve veriler sistemden tamamen kaldırılacaktır.
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ContentID" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm py-3" style="border-radius: 12px; font-weight: 600;">
                                <i class="fas fa-trash-alt me-2"></i> İçeriği Kalıcı Olarak Sil
                            </button>

                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg py-3 border-0" style="border-radius: 12px;">
                                <i class="fas fa-times me-2"></i> Vazgeç ve Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}