@model FloraMind_V1.Models.Content

@{
    ViewData["Title"] = "İçerik Detayları";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">

                <div class="card-header bg-dark text-white py-4 px-5">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h2 class="mb-1">@Model.Title</h2>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-leaf text-success me-2"></i>@Model.Plant.Name Rehberi
                            </p>
                        </div>
                        <div class="text-end d-none d-md-block">
                            <i class="fas fa-file-alt fa-3x opacity-25"></i>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="row g-3 mb-5 border-bottom pb-4">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fas fa-user text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Yazar</small>
                                    <span class="fw-bold">@Model.User.Name</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fas fa-calendar-alt text-info"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Tarih</small>
                                    <span class="fw-bold">@(Model.DateCreated?.ToString("dd MMMM yyyy") ?? "Tarih Yok")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <span class="badge bg-success rounded-pill px-3 py-2">
                                <i class="fas fa-check-circle me-1"></i> Aktif İçerik
                            </span>
                        </div>
                    </div>

                    <div class="content-body px-2 mb-5">
                        <h4 class="text-muted mb-4 border-start border-4 border-primary ps-3">İçerik Metni</h4>
                        <div class="p-4 bg-light rounded-3 shadow-sm" style="line-height: 1.8; font-size: 1.1rem; color: #444;">
                            @Html.DisplayFor(model => model.Body)
                        </div>
                    </div>

                    <hr class="my-4 opacity-25">

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 10px;">
                            <i class="fas fa-arrow-left me-2"></i>Listeye Dön
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.ContentID" class="btn btn-primary px-5 py-2 shadow-sm" style="border-radius: 10px;">
                            <i class="fas fa-edit me-2"></i>Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}