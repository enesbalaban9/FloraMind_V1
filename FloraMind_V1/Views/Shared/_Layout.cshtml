<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FloraMind</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FloraMind_V1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="main-header">
        <nav class="navbar navbar-expand-lg bg-white">
            <div class="container">


                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <span class="brand-text">Flora Mind</span>
                    <img src="~/images/logo.png" alt="FloraMind Logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto me-3">

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Yönetici</a>
                            </li>
                        }

                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Hesabim">Hesabım</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Plant" asp-action="Bitkilerim">Bitkilerim</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Catalog" asp-action="ShowCatalog">Katalog</a></li>
                    </ul>
                    <div class="d-flex">

                        <ul class="navbar-nav ms-auto">
                           
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    
                                    <span class="nav-link">Hoşgeldin, <strong>@User.Identity.Name</strong>&nbsp;</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Çıkış Yap</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer text-center py-3">
        © 2025 FloraMind — Tüm Hakları Saklıdır.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/_Layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>