@model FloraMind_V1.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Kodu Doğrula";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="container" id="loginContainer">
        <div class="logo-icon">
            <i class="fas fa-user-check"></i>
        </div>
        <h2>Kodu Doğrula</h2>
        <p style="text-align: center; color: #666; margin-bottom: 20px;">
            E-posta adresinize gönderilen 6 haneli kodu aşağıya giriniz.
        </p>

        <form asp-action="VerifyCode" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()
            
            <input type="hidden" name="Email" value="@ViewBag.Email" />

            <div class="text-danger">@Html.ValidationSummary(true)</div>

            <div class="input-group">
                <i class="fas fa-shield-alt"></i>
                <input type="text" name="Code" placeholder="6 Haneli Kod" required maxlength="6" style="letter-spacing: 5px; text-align: center; font-size: 20px;">
            </div>

            <div class="button-group">
                <button type="submit" class="btn-register btn-primary">Doğrula</button>
            </div>
        </form>
    </div>
</body>
</html>