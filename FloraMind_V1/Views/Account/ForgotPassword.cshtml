@model FloraMind_V1.Models.Login.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="container" id="loginContainer">
        <div class="logo-icon">
            <i class="fas fa-key"></i>
        </div>
        <h2>Şifre Sıfırlama</h2>
        <p style="text-align: center; color: #666; margin-bottom: 20px;">
            Sisteme kayıtlı e-posta adresinizi girin, size bir doğrulama kodu gönderelim.
        </p>

        <form id="forgotPasswordForm" asp-action="ForgotPassword" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()

            @* Hataların toplu görünmesi için *@
            <div class="text-danger">@Html.ValidationSummary(true)</div>

            <div class="input-group">
                <i class="fas fa-envelope"></i>
                @* name="Email" kısmı ViewModel'deki property ile tam eşleşmeli *@
                <input type="email" name="Email" id="Email" placeholder="E-posta Adresiniz" value="@Model?.Email" required>
            </div>
            @* Hata mesajının görüneceği yer *@
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>

            <div class="button-group">
                <button type="submit" class="btn-register btn-primary">Kod Gönder</button>
                <a href="@Url.Action("Login", "Account")" class="btn-register btn-secondary">Giriş Sayfasına Dön</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>