@model IEnumerable<FloraMind_V1.Models.Notification>

@{
    ViewData["Title"] = "Bildirimlerim";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">
                <i class="fas fa-bell me-2"></i>Bildirimleriniz
            </h5>
            <span class="badge rounded-pill bg-white text-success fw-bold">
                @Model.Count() Adet
            </span>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="display-1 text-muted mb-3">
                        <i class="fas fa-bell-slash"></i>
                    </div>
                    <h5 class="text-secondary">Henüz bir bildiriminiz bulunmuyor.</h5>
                    <p class="text-muted">Bitkilerinizin sulama zamanı geldiğinde burada görünecektir.</p>
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var item in Model)
                    {
                        <div class="list-group-item list-group-item-action border-start border-4 @(item.IsRead ? "border-light opacity-75" : "border-primary bg-light")">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="pe-3">
                                    <p class="mb-1 @(item.IsRead ? "text-secondary" : "fw-bold text-dark")">
                                        @item.Message
                                    </p>
                                    <small class="text-muted d-block mt-1">
                                        <i class="far fa-clock me-1"></i>@item.CreatedAt.ToString("dd MMMM yyyy HH:mm")
                                    </small>
                                </div>
                                @if (!item.IsRead)
                                {
                                    <span class="badge rounded-pill bg-primary shadow-sm">Yeni</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
        @if (Model.Any())
        {
            <div class="card-footer bg-white text-center py-3">
                <small class="text-muted">Tüm bildirimleriniz burada saklanır.</small>
            </div>
        }
    </div>
</div>