@model IEnumerable<FloraMind_V1.Models.Notification>

@{
    ViewData["Title"] = "Bildirimlerim";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">🔔 Bildirimleriniz</h4>
            <span class="badge bg-light text-dark">@Model.Count() Toplam</span>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-5 text-center">
                    <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Henüz bir bildiriminiz bulunmuyor.</p>
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var item in Model)
                    {
                        <div class="list-group-item list-group-item-action @(item.IsRead ? "" : "bg-light")">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1 @(item.IsRead ? "" : "fw-bold")">@item.Message</h6>
                                <small class="text-muted">@item.CreatedAt.ToString("dd/MM HH:mm")</small>
                            </div>
                            @if (!item.IsRead)
                            {
                                <span class="badge rounded-pill bg-primary small">Yeni</span>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>